@using Data.AngleOk.Model.Enums
@model Data.AngleOk.Model.Models.RealtyObject

@{
	ViewData["Title"] = "Create Realty Object";
}

<h2>Create Realty Object</h2>

<form asp-action="Create2" enctype="multipart/form-data">
	<div class="form-group">
		<label asp-for="CadastralNumber" class="control-label"></label>
		<input asp-for="CadastralNumber" class="form-control" />
		<span asp-validation-for="CadastralNumber" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Address" class="control-label"></label>
		<input asp-for="Address" class="form-control" />
		<span asp-validation-for="Address" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="RealtyObjectKind" class="control-label"></label>
		<select asp-for="RealtyObjectKind" class="form-control">
			@foreach (var kind in Enum.GetValues(typeof(RealtyObjectKind)))
			{
				<option value="@kind">@kind</option>
			}
		</select>
		<span asp-validation-for="RealtyObjectKind" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Description" class="control-label"></label>
		<textarea asp-for="Description" class="form-control"></textarea>
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>
	<!-- Добавление загрузки медиафайлов -->
	<div class="form-group">
		<label for="MediaFiles" class="control-label">Media Files</label>
		<input type="file" name="MediaFiles" class="form-control" multiple />
		<small class="form-text text-muted">You can upload multiple files.</small>
	</div>
	<div class="form-group">
		<input type="submit" value="Create" class="btn btn-primary" />
	</div>
</form>

<div>
	<a asp-action="Index">Back to List</a>
</div>