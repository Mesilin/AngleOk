@model Country

@{
    ViewData["Title"] = "Новая страна";
}
<h2>Новая страна</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FullName" class="control-label"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EnglishName" class="control-label"></label>
        <input asp-for="EnglishName" class="form-control" />
        <span asp-validation-for="EnglishName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Alpha2" class="control-label"></label>
        <input asp-for="Alpha2" class="form-control" />
        <span asp-validation-for="Alpha2" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Alpha3" class="control-label"></label>
        <input asp-for="Alpha3" class="form-control" />
        <span asp-validation-for="Alpha3" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Iso" class="control-label"></label>
        <input asp-for="Iso" class="form-control" />
        <span asp-validation-for="Iso" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Создать" class="btn btn-primary"/>
    </div>
</form>