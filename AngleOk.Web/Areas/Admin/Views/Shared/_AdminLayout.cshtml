@* _AdminLayout *@
<!DOCTYPE HTML>
<html>
<head>
    @await Html.PartialAsync("MetatagsPartial")
    @await Html.PartialAsync("CssPartial")
</head>
<body>
    <link href="/favicon.svg" rel="shortcut icon" runat="server" type="image/x-icon" />
    <link href="/favicon.svg" rel="icon" runat="server" type="image/ico" />
    <div id="page-wrapper">
        @await Html.PartialAsync("AdminHeaderPartial")
        <div id="main">
            <div class="container">
                <div class="row main-row">
                    <div class="col-10 col-12-medium@*  imp-medium *@">
                        @RenderBody()
                    </div>
                    @await Html.PartialAsync("SidebarPartial")
                </div>
            </div>
        </div>
        @await Html.PartialAsync("FooterPartial")
    </div>
    @await Html.PartialAsync("ScriptsPartial")
</body>
</html>