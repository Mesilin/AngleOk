@model System.Collections.Generic.List<Data.AngleOk.Model.Models.Region>

@{
    ViewData["Title"] = "Регионы";
}

<h2>Регионы</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Создать</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Наименование</th>
        <th>Наименование на англ. языке</th>
        <th>Страна</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.EnglishName</td>
            <td>@item.Country.Name</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Редактировать</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>