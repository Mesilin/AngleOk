@model Data.AngleOk.Model.Models.Client

@{
	ViewData["Title"] = "Delete Client";
}

<h2>Delete Client</h2>

<div>
	<h4>Are you sure you want to delete this?</h4>
	<div>
		<h4>Client</h4>
		<dl class="row">
			<dt class="col-sm-2">First Name</dt>
			<dd class="col-sm-10">@Model.FirstName</dd>

			<dt class="col-sm-2">Patronymic</dt>
			<dd class="col-sm-10">@Model.Patronymic</dd>

			<dt class="col-sm-2">Last Name</dt>
			<dd class="col-sm-10">@Model.LastName</dd>

			<dt class="col-sm-2">Email</dt>
			<dd class="col-sm-10">@Model.Email</dd>

			<dt class="col-sm-2">Phone Number</dt>
			<dd class="col-sm-10">@Model.PhoneNumber</dd>
		</dl>
	</div>

	<form asp-action="DeleteConfirmed">
		<input type="hidden" asp-for="Id" />
		<div class="form-group">
			<input type="submit" value="Delete" class="btn btn-danger" />
			<a asp-action="Index" class="btn btn-secondary">Cancel</a>
		</div>
	</form>
</div>