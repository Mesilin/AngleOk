@using Data.AngleOk.Model.Enums
@model AdvertisementCreateViewModel

@{
    ViewData["Title"] = "Новое объявление";
}

<h2>Новое объявление</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ClientId"></label>
        <input asp-for="ClientId" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DealType"></label>
        <select asp-for="DealType" class="form-control">
            @foreach (var dealType in Enum.GetValues(typeof(DealType)))
            {
                <option value="@dealType">@dealType</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="TargetPrice"></label>
        <input asp-for="TargetPrice" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="MinPrice"></label>
        <input asp-for="MinPrice" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="MaxPrice"></label>
        <input asp-for="MaxPrice" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ManagerId"></label>
        <input asp-for="ManagerId" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="IsActive"></label>
        <input asp-for="IsActive" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="ShortDescription"></label>
        <input asp-for="ShortDescription" class="form-control" />
    </div>

    <h4>Объект</h4>

    <div class="form-group">
        <label>Новый</label>
        <input asp-for="NewRealtyObject" type="checkbox" />
    </div>

    @if (Model.NewRealtyObject)
    {
        <div class="form-group">
            <label asp-for="RealtyObjectKind"></label>
            <select asp-for="RealtyObjectKind" class="form-control">
                @foreach (var kind in Enum.GetValues(typeof(RealtyObjectKind)))
                {
                    <option value="@kind">@kind</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label asp-for="CadastralNumber"></label>
            <input asp-for="CadastralNumber" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Latitude"></label>
            <input asp-for="Latitude" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Longitude"></label>
            <input asp-for="Longitude" class="form-control" />
        </div>
    }
    else
    {
        <div class="form-group">
            <label>Выберите существующий объект</label>
            <select asp-for="SelectedRealtyObjectId" class="form-control">
                <option value="">-- Выберите объект недвижимости--</option>
                @foreach (var realtyObject in Model.RealtyObjects)
                {
                    <option value="@realtyObject.Id">@realtyObject.Address</option>
                }
            </select>
        </div>
    }

    <button type="submit" class="btn btn-primary">Создать</button>
</form>