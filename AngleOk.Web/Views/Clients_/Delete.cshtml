@model Data.AngleOk.Model.Models.Client

@{
	ViewData["Title"] = "Удаление клиента";
}

<h2>Удаление клиента</h2>

<div>
	<h4>Вы действительно хотите удалить данные о клиенте?</h4>
	<div>
		<dl class="row">
			<dt class="col-sm-2">First Name</dt>
			<dd class="col-sm-10">@Model.FirstName</dd>

			<dt class="col-sm-2">Patronymic</dt>
			<dd class="col-sm-10">@Model.Patronymic</dd>

			<dt class="col-sm-2">Last Name</dt>
			<dd class="col-sm-10">@Model.LastName</dd>

			<dt class="col-sm-2">Email</dt>
			<dd class="col-sm-10">@Model.Email</dd>

			<dt class="col-sm-2">Phone Number</dt>
			<dd class="col-sm-10">@Model.PhoneNumber</dd>
		</dl>
	</div>

	<form asp-action="Delete">
		<input type="hidden" asp-for="Id" />
		<div class="form-group">
			<input type="submit" value="Удалить" class="btn btn-danger" />
			<a asp-action="Index" class="btn btn-secondary">Отмена</a>
		</div>
	</form>
</div>