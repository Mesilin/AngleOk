@model AngleOk.Web.Models.AccountViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div>
    <h1>Регистрация нового пользователя</h1>
    <div class="div-box">
        <form asp-area="" asp-controller="Account" asp-action="Register" method="post">
            <div asp-validation-summary="All"></div>
            <div>
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" />
                <span asp-validation-for="FirstName"></span>
            </div>
            <div>
                <label asp-for="Patronymic"></label>
                <input asp-for="Patronymic" />
                <span asp-validation-for="Patronymic"></span>
            </div>
            <div>
                <label asp-for="LastName"></label>
                <input asp-for="LastName" />
                <span asp-validation-for="LastName"></span>
            </div>
            <div>
                <label asp-for="Position"></label>
                <input asp-for="Position" />
                <span asp-validation-for="Position"></span>
            </div>
            <div>
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" />
                <span asp-validation-for="PhoneNumber"></span>
            </div>
            <div>
                <label asp-for="PublicPhone"></label>
                <input asp-for="PublicPhone" />
                <span asp-validation-for="PublicPhone"></span>
            </div>
            <div>
                <label asp-for="Email"></label>
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <label asp-for="UserName"></label>
                <input asp-for="UserName" />
                <span asp-validation-for="UserName"></span>
            </div>
            <div>
                <label asp-for="Password"></label>
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="IsActive"></label>
                <input asp-for="IsActive" />
                <span asp-validation-for="IsActive"></span>
            </div>
            <div>
                <input type="submit" value="Зарегистрировать" />
            </div>
        </form>
    </div>
</div>